{
  "name": "mcp-server-boilerplate",
  "version": "1.0.0",
  "description": "A comprehensive boilerplate for building MCP (Model Context Protocol) servers with TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "node --loader ts-node/esm src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cli": "node --loader ts-node/esm test/cli-test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "generate:tool": "node scripts/generate-tool.js",
    "generate:service": "node scripts/generate-service.js",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "boilerplate",
    "server",
    "tools",
    "resources",
    "prompts"
  ],
  "author": "MCP Community",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.25.32",
    "mcps-logger": "^1.0.0",
    "googleapis": "^127.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.23",
    "@types/jest": "^29.5.0",
    "typescript": "^5.8.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "files": [
    "dist/",
    "templates/",
    "scripts/",
    "docs/"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
} 